name: Deploy Java Reports to GitHub Pages

on:
  push:
    branches: ["main"]
  workflow_dispatch:

permissions:
  contents: read
  pages: write
  id-token: write

concurrency:
  group: "pages"
  cancel-in-progress: false

jobs:
  deploy:
    environment:
      name: github-pages
      url: ${{ steps.deployment.outputs.page_url }}
    runs-on: ubuntu-latest
    steps:
      - name: Checkout
        uses: actions/checkout@v4

      # Δημιουργία .nojekyll για να απενεργοποιήσουμε το Jekyll
      - name: Disable Jekyll
        run: touch target/.nojekyll

      - name: Setup Pages
        uses: actions/configure-pages@v5

      - name: Upload artifact
        uses: actions/upload-pages-artifact@v3
        with:
          path: target   # ανεβάζουμε μόνο τον φάκελο target

      - name: Deploy to GitHub Pages
        id: deployment
        uses: actions/deploy-pages@v4
