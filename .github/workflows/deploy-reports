name: Deploy Reports to GitHub Pages

on:
  push:
    branches:
      - main

permissions:
  contents: read
  pages: write
  id-token: write

jobs:
  build-and-deploy:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout Code
        uses: actions/checkout@v4

      - name: Set up JDK
        uses: actions/setup-java@v4
        with:
          java-version: '17'
          distribution: 'temurin'
          cache: 'maven'

      - name: Generate Reports with Maven
        # Προσθέσαμε το -Dmaven.javadoc.skip=false για σιγουριά και το site goal για τις άδειες
        run: |
          mvn clean verify
          mvn javadoc:javadoc
          mvn project-info-reports:dependencies

      - name: Prepare Site Folder
        run: |
          mkdir -p public/docs
          mkdir -p public/coverage
          
          # Αντιγραφή Javadoc αν υπάρχουν (λόγω του failOnError:false στο pom)
          if [ -d "target/site/apidocs" ]; then
            cp -r target/site/apidocs/* public/docs/
          fi
          
          # Αντιγραφή JaCoCo
          if [ -d "target/site/jacoco" ]; then
            cp -r target/site/jacoco/* public/coverage/
          fi
          
          # Αντιγραφή του report για τις άδειες
          if [ -f "target/site/dependencies.html" ]; then
            cp target/site/dependencies.html public/
          fi
          
          # Δημιουργία κεντρικής σελίδας Menu για να μην βλέπεις 404
          echo "<html><body style='font-family:sans-serif; padding:40px;'> \
                <h1>Project Quality Reports</h1> \
                <hr> \
                <ul> \
                  <li><a href='docs/index.html'> Technical Documentation (Javadoc)</a></li> \
                  <li><a href='coverage/index.html'> Test Coverage (JaCoCo)</a></li> \
                  <li><a href='dependencies.html'> Dependencies & Licenses</a></li> \
                </ul> \
                </body></html>" > public/index.html

      - name: Setup Pages
        uses: actions/configure-pages@v4

      - name: Upload artifact
        uses: actions/upload-pages-artifact@v3
        with:
          path: './public'

      - name: Deploy to GitHub Pages
        id: deployment
        uses: actions/deploy-pages@v4
