<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>DhmosiaBytes</groupId>
  <artifactId>budget-app</artifactId>
  <packaging>jar</packaging>
  <version>1.0-SNAPSHOT</version>
  <name>budget-app</name>
  <url>http://maven.apache.org</url>

  <properties>
    <!-- 1. Κωδικοποίηση πηγαίου κώδικα για σωστή εμφάνιση ελληνικών χαρακτήρων -->
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <!-- 2. Κωδικοποίηση reports maven για σωστή εμφάνιση ελληνικών χαρακτήρων -->
    <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
  </properties>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.11.0</version>
        <configuration>
        <!-- Δήλωση Java Compiler που θα χρησιμοποιείται -->
          <release>17</release>
        <!-- Κωδικοποίηση compiler ώστε να μεταγλωττίζονται σωστά τα ελληνικά -->
          <encoding>UTF-8</encoding>
        </configuration>
      </plugin>
    </plugins>
  </build>

  <dependencies>
    <!-- 1. Dependency για Junit: testing -->
    <dependency>
      <groupId>org.junit.jupiter</groupId>
      <artifactId>junit-jupiter</artifactId>
      <version>5.9.3</version>
      <scope>test</scope>
    </dependency>

    <!-- 2. Dependency για Tabula: για εξαγωγή δεδομένων από PDF -->
    <dependency>
      <groupId>technology.tabula</groupId>
      <artifactId>tabula</artifactId>
      <version>1.0.5</version>
    </dependency>

     <!-- 3. Dependency για PDFBox: διαχείριση PDF αρχείων -->
    <dependency>
      <groupId>org.apache.pdfbox</groupId>
      <artifactId>pdfbox</artifactId>
      <version>2.0.30</version>
    </dependency>
  </dependencies>

</project>
